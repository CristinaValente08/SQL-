Select * from Authors;

Select * from Sales_Record;

/* Display Authors, Title and Copies Sold*/

Select Authors.Book_Title, Authors.Name,Authors.Best_Seller_Position, Sales_Record.Copies_Sold
from Authors
Join Sales_Record
On Authors.Book_Title=Sales_Record.Book_id;

/*Display the Total Copies sold in Each Genre*/

Select Authors.Genre, Sum(Sales_Record.Copies_Sold)
From Authors 
Join Sales_Record
On Authors.Book_Title=Sales_Record.Book_id
Group by Authors.Genre;
